<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/chkFakeConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setUseFakeConnection"
            android:text="Use Fakeconnection" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LinearCorrection"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expect"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/eLinearCorrectionExpect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="100" >
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Got"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/eLinearCorrectionGot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnLinearCorrectionTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="runLinearCorrectionTest"
            android:text="Start Test" />

        <Button
            android:id="@+id/btnLinearCorrectionSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setLinearCorrection"
            android:text="Save" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear Runtime Correction"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/eLinearRuntimeDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="100" />

        <Button
            android:id="@+id/btnLinearRuntimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startLinearRuntimeTest"
            android:text="Start" />

        <Button
            android:id="@+id/btnLinearRuntimeStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stopLinearRuntimeTest"
            android:text="Stop" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angular Calibration"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expect (x * 90) x > 0 ? Left : Right"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/eAngularCorrectionExpect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Got (in degrees)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/eAngularCorrectionGot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnAngularCorrectionRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="runAngularCorrectionTest"
            android:text="Start" />

        <Button
            android:id="@+id/btnAngularCorrectionSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

</ScrollView>