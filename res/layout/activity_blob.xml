<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RadioGroup
    android:id="@+id/colorGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
        
    <RadioButton
        android:id="@+id/radioGreen"
        android:text="Green"
        android:checked="true"
        android:onClick="onRadioButtonToggle" />

        <RadioButton
        android:id="@+id/radioRed"
        android:text="Red" 
        android:onClick="onRadioButtonToggle"/>
    </RadioGroup>
    
    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStart"
        android:text="Start" />
    
        <Button
        android:id="@+id/btnHomo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onHomography"
        android:text="Get Homography" />

                    <TextView
            android:id="@+id/txtLblX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
            <EditText
            android:id="@+id/inputX"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:inputType="numberDecimal|numberSigned" />
                    
            <TextView
            android:id="@+id/txtLblY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
            
            <EditText
            android:id="@+id/inputY"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:inputType="numberDecimal|numberSigned" />
                
            <TextView
            android:id="@+id/txtLblTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TH"
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
            
            <EditText
            android:id="@+id/inputTH"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:inputType="numberDecimal|numberSigned" />
        
</LinearLayout>
</ScrollView>
        




