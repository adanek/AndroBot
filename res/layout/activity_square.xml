<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

<RelativeLayout 

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.uibk.informatik.androbot.app.SquareActivity" >

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Square Test" />

        <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:onClick="onStart"
        android:text="Start" />
        
        
        <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="180dp"
        android:onClick="onStop"
        android:text="Stop" />

        <SeekBar
            android:id="@+id/distance"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:max="200"
            android:progress="50" />

        <TextView
            android:id="@+id/txtLblDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="20dp"
            android:text="Distance"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
            <TextView
            android:id="@+id/txtLblRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="20dp"
            android:text="RL"
            android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <TextView
            android:id="@+id/txtLblFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="70dp"
            android:text="FL"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    
            <TextView
            android:id="@+id/txtLblFM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="120dp"
            android:text="FM"
            android:textAppearance="?android:attr/textAppearanceSmall" />            
         
            <TextView
            android:id="@+id/txtLblFR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="170dp"
            android:text="FR"
            android:textAppearance="?android:attr/textAppearanceSmall" /> 
            
            <TextView
            android:id="@+id/txtLblRR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="220dp"
            android:text="RR"
            android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txtRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:layout_marginTop="210dp"
           	    android:layout_marginLeft="20dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
              <TextView
                android:id="@+id/txtFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:layout_marginTop="210dp"
           	    android:layout_marginLeft="70dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
               <TextView
                android:id="@+id/txtFM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:layout_marginTop="210dp"
           	    android:layout_marginLeft="120dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
               
                <TextView
                android:id="@+id/txtFR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:layout_marginTop="210dp"
           	    android:layout_marginLeft="170dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <TextView
                android:id="@+id/txtRR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:layout_marginTop="210dp"
           	    android:layout_marginLeft="220dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                
            <TextView
            android:id="@+id/txtLblLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="20dp"
            android:text="Log"
            android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txtLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                 android:layout_marginLeft="20dp"
                android:text=" " />
                
</RelativeLayout>

</ScrollView>